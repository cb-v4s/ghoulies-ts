{
  "compilerOptions": {
    "target": "es2018",         /* Specify ECMAScript target version */
    "module": "commonjs",       /* Specify module code generation */
    "outDir": "./public",         /* Redirect output structure to the directory */
    "strict": true,             /* Enable all strict type-checking options */
    "esModuleInterop": true,    /* Enables emit interoperability between CommonJS and ES Modules */
    "skipLibCheck": true,       /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true /* Disallow inconsistently-cased file names */
  },
  "include": ["server.ts"],     /* Specify files to include in compilation */
  "exclude": ["node_modules"]   /* Specify files to exclude from compilation */
}